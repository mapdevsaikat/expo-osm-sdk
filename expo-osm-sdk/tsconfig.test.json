{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "example"
  ]
} 